<%- include('./partials/header.ejs') %>

    <h1>main file </h1>

    <a href="/add" class="btn btn-primary">Click here To Add Student</a>


    <table class="table table-striped">
        <thead>
            <tr>
                <th scope="col">ID</th>
                <th scope="col">First Name</th>
                <th scope="col">Last Name</th>
                <th scope="col">Course</th>
                <th scope="col">Number</th>
                <th scope="col">Image</th>

                <th scope="col">User Name </th>
                <th scope="col"> Actions </th>
            </tr>
        </thead>
        <tbody>

            <% data.forEach((student, index)=>{ %>

                <tr>
                    <th scope="row">
                        <%= student.id%>
                    </th>
                    <td>
                        <%= student.first_name%>
                    </td>
                    <td>
                        <%= student.last_name%>
                    </td>

                    <td>
                        <%= student.course%>
                    </td>
                    <td>
                        <%= student.number%>
                    </td>
                    <td>
                        <img src="assets/images/<%= student.image%>" class="rounded-circle" />
                    </td>
                    <td>
                        <%= student.user_name%>
                    </td>
                    <td> <a href="/edit/<%= student.id %>">Edit </a> | <a href="/delete/<%= student.id %>">Delete</a>
                    </td>

                    <% });%>

        </tbody>
    </table>
    </div>
    </body>

    </html>